{% extends 'base.html.twig' %}

{% block content %}




    <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
        <div class="page-title">

            <div class="pull-left">
                <h1 class="title">Maintenances</h1>                            </div>

            <div class="pull-right hidden-xs">
                <ol class="breadcrumb">
                    <li>
                        <a href="index.html"><i class="fa fa-home"></i>Menu</a>
                    </li>
                    <li>
                        <a href="eco-customers.html">Maintenances</a>
                    </li>
                    <li class="active">
                        <strong>Tous Les Maintenances</strong>
                    </li>
                </ol>
            </div>

        </div>
    </div>
    <div class="clearfix"></div>

    <div class="col-lg-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">Tous Les Maintenances</h2>
                <div class="actions panel_actions pull-right">
                    <i class="box_toggle fa fa-chevron-down"></i>
                    <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                    <i class="box_close fa fa-times"></i>
                </div>
            </header>
            <div class="content-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">

                        <!-- ******************************************** -->
                        <table id="example" class="display table table-hover table-condensed" cellspacing="0" width="100%">

                            <thead>
                            <tr>

                                <th>Société</th>
                                <th>Machine</th>
                                <th>Nom De L'interventaire</th>
                                <th> date </th>
                                <th> intervention </th>
                                <th> Action </th> </tr>
                            </thead>

                            <tbody>
                            {% for maintenance in maintenances %}
                            <tr>


                                <td>
                                    {{maintenance.idclient.societe}}
                                </td>
                                <td>
                                    {{maintenance.idproduit.reference}}
                                </td>
                                <td>
                                    {{maintenance.nominterventaire}}
                                </td>
                                <td>
                                    {{maintenance.date|date('d/m/y')}}
                                </td>
                                <td>
                                    {{maintenance.action}}
                                </td>


                                <td>
                                    <a href="{{path('edit_maintenacemachine',{'id': maintenance.id})}}"><i class="fa fa-pencil-square-o"></i></a>
                                </td>





                                {% endfor %}
                            </tbody>

                        </table>
                        <!-- ******************************************** -->




                    </div>
                </div>
            </div>
        </section></div>




{% endblock %}

