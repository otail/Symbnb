{% extends 'base.html.twig'%}
{% block content %}

    <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
        <div class="page-title">

            <div class="pull-left">
                <h1 class="title">Ajouter Categorie </h1>                            </div>

            <div class="pull-right hidden-xs">
                <ol class="breadcrumb">
                    <li>
                        <a href="index.html"><i class="fa fa-home"></i>Menu</a>
                    </li>
                    <li>
                        <a href="eco-customers.html">Categorie</a>
                    </li>
                    <li class="active">
                        <strong>Ajouter Categorie</strong>
                    </li>
                </ol>
            </div>

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left"> Ajouter Categorie</h2>
                <div class="actions panel_actions pull-right">
                    <i class="box_toggle fa fa-chevron-down"></i>
                    <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                    <i class="box_close fa fa-times"></i>
                </div>
            </header>
            <div class="content-body">
                <div class="row">

                    {{ form_start(formCategorie) }}
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12">



                            <div class="form-group">

                                <label class="form-label" for="field-1">nom de la categorie</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{form_widget(formCategorie.nomcategorie, {'attr': {'placeholder': "Titre de l'article", 'type':"text",'class':"form-control", 'id':"field-1" }})}}

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12 padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">Enregister</button>
                                <button type="button" class="btn">Annuler</button>
                            </div>
                        </div>
                    {{ form_end(formCategorie) }}

                </div>
            </div>
        </section></div>
{%endblock%}